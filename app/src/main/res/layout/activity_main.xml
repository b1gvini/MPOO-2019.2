<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".infra.gui.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="50dp" />


    <Button
        android:id="@+id/botaoEntrar"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:background="#AF0D25"
        android:text="ENTRAR"
        android:textColor="#FAF3F3"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/botaoCadastro"
        android:layout_width="115dp"
        android:layout_height="43dp"
        android:background="#AF0D25"
        android:shadowColor="#00719E7F"
        android:text="Cadastre-se"
        android:textColor="#FCF5F5F5"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="420dp" />

    <EditText
        android:id="@+id/caixatxtEmailLogin"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite seu E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#0E0606"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="160dp" />

    <EditText
        android:id="@+id/caixatxtSenhaLogin"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite sua senha"
        android:inputType="textPassword"
        android:textColor="#0A0303"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="224dp" />

    <Switch
        android:id="@+id/switchUsuarioProfissional"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:text="Cliente"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="280dp" />

    <TextView
        android:id="@+id/lableEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Ainda nÃ£o tem uma conta?"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="396dp" />

    <TextView
        android:id="@+id/labelProfissional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profissional"
        android:textColor="#0A0404"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="280dp" />

    <Button
        android:id="@+id/esqueceuSenha"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:background="#fff"
        android:text="Esqueceu sua senha?"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="496dp" />

    <Button
        android:id="@+id/botaoVini"
        android:layout_width="213dp"
        android:layout_height="0dp"
        android:layout_marginStart="76dp"
        android:background="#800080"
        android:text="Cadastrar Filmes"
        android:textColor="#FAF3F3"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="463dp" />

    <Button
        android:id="@+id/botaoViniExibir"
        android:layout_width="213dp"
        android:layout_height="0dp"
        android:background="#800080"
        android:text="Exibir Filmes"
        android:textColor="#FAF3F3"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="304dp" />

</androidx.constraintlayout.widget.ConstraintLayout>