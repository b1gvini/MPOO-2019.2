<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/labelNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="185dp"
        android:text="@string/nome"
        android:textColor="#0A0404"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/tituloTextField"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="205dp"
        android:ems="10"
        android:hint="Digite o Título do Filme"
        android:inputType="textPersonName"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/labelDescricao"
        android:layout_width="101dp"
        android:layout_height="23dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="255dp"
        android:text="Descrição"
        android:textColor="#090101"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/descricaoTextField"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="false"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/border"
        android:hint=" Digite a descrição do filme"
        android:inputType="textPersonName"
        android:gravity="top"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/b1gFilmes"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vini" />

    <ImageButton
        android:id="@+id/imageButtonFinalizar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="475dp"
        android:background="#fff"
        android:scaleType="centerCrop"

        android:src="@drawable/finalizar" />




</RelativeLayout>
